<html>

{{> header}}
{{> nav}}


<body>
    {{#blogPosts}}
        <div class="card text-center">
            <div class="card-header">
                {{subject}}
            </div>
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{body}}</p>
                <form action='/delete-post' method='POST'>
                    <input type="hidden" name="blogPost" value="{{blogid}}">
                    <button class="btn btn-sm btn-outline-secondary my-2 my-sm-0" type="delete">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                {{author}} | {{date}}
            </div>
        </div>
    {{/blogPosts}}




</body>


{{> footer}}
</html>